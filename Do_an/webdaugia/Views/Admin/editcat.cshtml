@model webdaugia.Models.DanhMuc
@{
    ViewBag.Title = "editcat";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

@section css{
    <style type="text/css">
        .error {
            color: #F00;
            background-color: #FFF;
        }
    </style>
}

@section js {
    <script src="~/wordpress/combodate-1.0.7/moment.js"></script>
    <script src="~/wordpress/jquery-validation-1.16.0/dist/jquery.validate.js"></script>
    <script src="~/wordpress/jquery-validation-1.16.0/dist/additional-methods.js"></script>
    <script src="~/wordpress/combodate-1.0.7/combodate.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $("#frmadd").validate({
                rules: {
                    TenDM: {
                        required: true
                    }
                },

                messages: {
                    name: {
                        required: 'Category name cannot be empty'
                    },
                },
                highlight: function (element) {
                    $(element).parent().addClass('errors')
                },
                unhighlight: function (element) {
                    $(element).parent().removeClass('errors')
                },


            });
        });
    </script>
}
<h2>editcat</h2>

<div id="primary" class="content-area">

    <div class="inner">

        <div id="content" class="site-content" role="main">


            <article id="post-7" class="post-7 page type-page status-publish hentry">
                <div class="entry-wrap clearfix">

                    <div class="entry-content-wrap clearfix no-thumb">
                        <div class="entry-content">
                            <div class="woocommerce">
                                <div class="woocommerce-MyAccount-content">
                                    <h2>Add new Category</h2>
                                    <form class="woocommerce-EditAccountForm edit-account" action="" method="post" id="frmadd">



                                        <p class="woocommerce-form-row woocommerce-form-row--first form-row form-row-first">
                                            <label for="account_email">CartName <span class="required">*</span></label>
                                            <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="TenDM" id="name" value="@Model.TenDM">
                                        </p>

                                        <div class="clear"></div>
                                        <p>
                                            <input type="hidden" id="_wpnonce" name="_wpnonce" value="503e6e5e1d"><input type="hidden" name="DMID" value="@Model.DMID">		<input type="submit" class="woocommerce-Button button" name="save_account_details" value="Save Changes">
                                            <input type="hidden" name="action" value="save_account_details">
                                        </p>

                                    </form>

                                </div>



                            </div>
                        </div><!-- .entry-content -->

                    </div><!-- .entry-content-wrap .clearfix .no-thumb -->
                </div><!-- .entry-wrap .clearfix -->
            </article><!-- #post-7 -->


        </div><!-- #content .site-content -->





    </div><!-- .inner -->

</div>