
@{
    ViewBag.Title = "Addcat";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
@section css{
    <style type="text/css">
        .error {
            color: #F00;
            background-color: #FFF;
        }
    </style>
}

@section js {
    <script src="~/wordpress/combodate-1.0.7/moment.js"></script>
    <script src="~/wordpress/jquery-validation-1.16.0/dist/jquery.validate.js"></script>
    <script src="~/wordpress/jquery-validation-1.16.0/dist/additional-methods.js"></script>
    <script src="~/wordpress/combodate-1.0.7/combodate.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $("#frmadd").validate({
                rules: {
                    name: {
                        required: true
                    }
                },

                messages: {
                    name: {
                        required: 'Category name cannot be empty'
                    },
                },
                highlight: function (element) {
                    $(element).parent().addClass('errors')
                },
                unhighlight: function (element) {
                    $(element).parent().removeClass('errors')
                },


            });
        });
    </script>
}



<h2>Add new Category</h2>
<form class="woocommerce-EditAccountForm edit-account" action="" method="post" id="frmadd">



    <p class="woocommerce-form-row woocommerce-form-row--first form-row form-row-first">
        <label for="account_email">CartName <span class="required">*</span></label>
        <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="name" id="name">
    </p>

    <div class="clear"></div>
    <p>
        <input type="hidden" id="_wpnonce" name="_wpnonce" value="503e6e5e1d"><input type="hidden" name="_wp_http_referer" value="/my-account/edit-account/">		<input type="submit" class="woocommerce-Button button" name="save_account_details" value="Add category">
        <input type="hidden" name="action" value="save_account_details">
    </p>

</form>
