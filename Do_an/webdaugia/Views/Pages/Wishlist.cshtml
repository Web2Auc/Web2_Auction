
@{
    ViewBag.Title = "Wishlist";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
@model List<webdaugia.Models.SanPham>
<div class="title-area clearfix main-color">

    <div class="inner">

        <div class="left-side-title">
            <h1 class="page-title">Wishlist</h1>
            <nav class="woocommerce-breadcrumb"><a href="../index.html">Home</a>&nbsp;&#47;&nbsp;Wishlist</nav>
        </div><!-- .left-side-title -->

        <div class="right-side-title">

        </div><!-- .right-side-title -->

    </div><!-- .inner -->

</div><!-- .title-area .clearfix .main-color -->




@if (Model.Count() == 0)
{
    <div id="container">
        <div id="content" role="main">

            <p class="woocommerce-info">No products found in your wishlist.</p>

        </div>
    </div>
}
else
{
    <div id="container">
        <div id="content" role="main">




            <ul class="products">
                @foreach (var a in Model)
                {

                    <li class="product">
